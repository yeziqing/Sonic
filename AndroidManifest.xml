<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.steven.sonic.soniccatch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.VIBRATE"/>
    
    <application
        android:icon="@drawable/icon"
        android:allowBackup = "true"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:hardwareAccelerated="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape">
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".GameStart" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".GameOptions" 
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Scores"
            android:label="Scores"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steven.sonic.soniccatch.MainActivity" />
            
        </activity>
        
        <activity
            android:name=".testLoadData"
            android:label="testLoadData" 
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steven.sonic.soniccatch.MainActivity" />
         </activity>
         
        <activity
            android:name=".resultsGraph"
            android:label="resultsGraph" 
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steven.sonic.soniccatch.MainActivity" />
         </activity>
         <activity
            android:name=".LoadScores"
            android:label="LoadScores" 
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steven.sonic.soniccatch.MainActivity" />
         </activity>
         
         <activity
            android:name=".SimpleList"
            android:label="Saved Scores"
            android:screenOrientation="landscape">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.steven.sonic.soniccatch.MainActivity" />
         </activity>
         
         
         
        
         
    </application>

</manifest>